<h1>Product List</h1>
<!-- <p>Find me in app/views/products/index.html.erb</p> -->

<%= link_to "List a new product", new_product_path %>

<% @products.each do |product| %>
	<p><%= product.name %>, <%= product.description %>, <%= product.formatted_price %>, <%= link_to "Show", product_path(product) %>, <%= link_to "Edit", edit_product_path(product) %>, <%= link_to "Delete", product, method: :delete, data: {confirm: "Are you sure you want to delete?" } %></p>

<% end %>